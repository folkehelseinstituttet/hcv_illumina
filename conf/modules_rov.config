/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    withName: 'BBMAP_BBNORM' {
        ext.args = "target=100 min=5"
        publishDir = [
            path: { "${params.outdir}/bbnorm" }
        ]
    }

    withName: 'VIGOR' {
        publishDir = [
            path: { "${params.outdir}/vigor" }
        ]
    }

    withName: 'VIGOR_GFF_EXTRACT' {
        publishDir = [
            path: { "${params.outdir}/vigor" }
        ]
    }

    withName: 'VIGOR_HIGH_COVERAGE' {
        publishDir = [
            path: { "${params.outdir}/vigor" }
        ]
    }

    withName: 'NIPH_VIRALSEQ:ROV_ILLUMINA:MAFFT_IQTREE_GENOTYPE:MAFFT' {
        ext.prefix = { "${meta.id}.${meta.gene}" } // Add gene name to prefix
        ext.args = '--auto'
    }

    withName: 'NIPH_VIRALSEQ:ROV_ILLUMINA:MAFFT_IQTREE_GENOTYPE:MAFFT_PAIRWISE' {
        ext.prefix = { "${meta.id}.${meta.gene}.pairwise" } // Add gene name to prefix
        ext.args = '--auto'
    }

    withName: 'IQTREE' {
        ext.prefix = { "${meta.id}.${meta.gene}" } // Add gene name to prefix
        ext.args = '-B 1000 -m TEST'
    }

}

